<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginBottom="8dp"
        android:background="#fff"
        android:layout_gravity="center"
        android:gravity="">

        <ImageView
            android:id="@+id/stock_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_camera"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <TextView
                android:id="@+id/item_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grand Theft Auto"
                android:layout_margin="4sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_code"
                android:text="Gta el juego numero uno credo por Rockstar"
                android:layout_margin="4sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@color/orange"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <TextView
                android:id="@+id/quantity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rankin 2014"
                android:layout_below="@id/item_name"
                android:textSize="10sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="4sp"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="8sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ranking 2015"
                android:textSize="10sp"
                android:layout_toRightOf="@id/quantity_text"
                android:layout_below="@id/item_name"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="4sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/cost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ranking 2016"
                android:layout_toRightOf="@id/price_text"
                android:layout_below="@id/item_name"
                android:textSize="10sp"
                android:layout_marginTop="4sp"
                android:layout_marginBottom="4sp"
                android:layout_marginLeft="8sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quantity_text"
                android:layout_marginLeft="4dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_text"
                android:layout_toRightOf="@id/quantity"
                android:text="00.00"
                android:textSize="12sp"
                android:layout_marginLeft="28dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_text"
                android:layout_toRightOf="@id/price"
                android:text="00.00"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:textColor="#000"/>



        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
